<h1>Listing dimensions</h1>

<table>
  <tr>
    <th>Artifact</th>
    <th>Dim type</th>
    <th>Dim value</th>
  </tr>

<% @dimensions.each do |dimension| %>
  <tr>
    <td><%=h dimension.artifact_id %></td>
    <td><%=h dimension.dim_type %></td>
    <td><%=h dimension.dim_value %></td>
    <td><%= link_to 'Show', dimension %></td>
    <td><%= link_to 'Edit', edit_dimension_path(dimension) %></td>
    <td><%= link_to 'Destroy', dimension, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New dimension', new_dimension_path %>